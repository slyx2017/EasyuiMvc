
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        .juzhong {
            position: absolute;
            top: 50%;
            left: 50%;
            margin-left: -100px;
            margin-top: -100px;
            width: 300px;
            height: 200px;
            color:#fff;
        }
    </style> 
    @Styles.Render("~/Content/themes")
</head>
<body class="easyui-layout">
    <div class="easyui-panel" style="width:100%;height:100%;border:none;background-color:#0267A9;">
        <div class="juzhong">
            <form id="ff">
                <table id="tblAdd">
                    <tr>
                        <td>
                            <label for="UserName">用户名：</label>
                        </td>
                        <td>
                            <input class="easyui-textbox" type="text" id="UserName" name="UserName" value="wzy" data-options="required:true,validType:'length[1,32]'" />
                        </td>
                        <td>
                    </tr>
                    <tr>
                        <td>
                            <label for="Password">密  码：</label>
                        </td>
                        <td>
                            <input class="easyui-textbox" type="password" id="Password" name="Password" value="q111111" data-options="required:true,validType:'length[1,32]'" />
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td style="text-align: center; padding-top: 10px">
                            <a href="javascript:void(0)" class="easyui-linkbutton" id="btnLogin" style="width:100%" onclick="LoginUserInfo()">登录</a>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="checkbox" name="isAllway" id="isAllway" /><label for="isAllway">记住密码</label></td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
    @Scripts.Render("~/Content/easyuijs")
    <script src="~/Content/js/loginjs.js"></script>
</body>
</html>
